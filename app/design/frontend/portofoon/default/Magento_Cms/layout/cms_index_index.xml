<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="portofoon.parent" template="Magento_Cms::portofoon.phtml">
                <block class="Magento\Framework\View\Element\Template" name="portofoon.child.block1" template="Magento_Cms::portofoon_child-first.phtml"/>
                <block class="Magento\Framework\View\Element\Template" name="portofoon.child.block2" template="Magento_Cms::portofoon_child-second.phtml">
                    <arguments>
                        <argument name="img_name" xsi:type="string" >Smartportofoon_Logo.png</argument>
                        <argument name="img_alt" xsi:type="string">Smartportofoon_Logo</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template" name="portofoon.child.block3" template="Magento_Cms::portofoon_child-carousel.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
